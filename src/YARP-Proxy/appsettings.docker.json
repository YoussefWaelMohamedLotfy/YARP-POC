{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "YarpReverseProxy": {
    "Routes": {
      "samplebackend": {
        "clusterId": "backendcluster",
        "Match": {
          "Path": "backend/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "backendcluster": {
        "Destinations": {
          "dest1": {
            "Address": "http://samplebackend/"
          }
        }
      }
    }
  }
}
